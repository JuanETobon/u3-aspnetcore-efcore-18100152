@model Marca

<h1>Nueva Marca</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarRegistro" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NombreDeMarca" class="control-label"></label>
                <input asp-for="NombreDeMarca" class="form-control" />
                <span asp-validation-for="NombreDeMarca" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="IdModelo" class="control-label">Tipo</label>
                <select asp-for="IdModelo" class="form-control" asp-items="ViewBag.Modelos"></select>
                <span asp-validation-for="IdModelo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>